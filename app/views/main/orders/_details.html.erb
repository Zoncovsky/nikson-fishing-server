<div class="container">
  <h3 class="mt-2 text-4xl font-extrabold tracking-tight leading-none text-dark md:text-4xl lg:text-4xl text-center bg-light">
    <%= t('order.my_orders.details') %> #<%= @order.id %>
  </h3>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover border">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col"><%= I18n.t('product_page.name') %></th>
            <th scope="col"><%= I18n.t('product_page.price') %></th>
            <th scope="col"><%= I18n.t('product_page.category_name') %></th>
          </tr>
        </thead>
        <tbody>
          <% @order.products.each do |product| %>
            <tr>
              <td><%= link_to product.id, main_product_path(product) %></td>
              <td><%= product.name %></td>
               <td><%= product.price.to_f %><%= I18n.t('main_page.currency') %></td>
              <td><%= product.category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <p class="card-text"><%= I18n.t('cart.total') %>: <%= @order.total %> <%= I18n.t('main_page.currency') %></p>
          <p class="card-text"><%= @order.customer_email %> | <%= @order.user.full_name %></p>
          <p class="card-text"><%= @order.address %> | <%= @order.post_number %></p>
        </div>
      </div>
      <%= link_to t('order.my_orders.back'), main_orders_path, class: 'btn btn-primary btn-sm mt-2' %>
    </div>
  </div>
</div>
