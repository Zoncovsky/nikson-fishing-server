<div class="position-relative overflow-hidden p-3 p-md-5 text-center" style="background-image: url('<%= asset_path('banner.jpg') %>');">
  <div class="col-md-6 p-lg-5 mx-auto my-5">
    <h1 class="display-3 fw-bold"><%= I18n.t('main_page.welcome') %></h1>
    <h3 class="fw-normal text-muted mb-3"><%= I18n.t('main_page.title') %></h3>
    <div class="d-flex gap-3 justify-content-center lead fw-normal">
      <%= link_to I18n.t('main_page.button_catalog'), catalog_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
  <div class="product-device shadow-sm d-none d-md-block"></div>
  <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>
<div class="album py-5 bg-body-tertiary">
  <h2 class="mb-8 text-4xl font-extrabold tracking-tight leading-none text-dark md:text-4xl lg:text-4xl text-center"><%= I18n.t('main_page.popular_item') %></h2>
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @popular_products.each do |ppr| %>
        <div class="col">
          <div class="card shadow-sm h-100">
            <%= image_tag (ppr.images.first), class: 'bd-placeholder-img card-img-top img-fluid', style: 'height: 400px; object-fit: cover;' %>
            <div class="card-body d-flex flex-column">
              <p class="card-text"><%= ppr.name %></p>
              <p class="card-text"><%= ppr.description %></p>
              <div class="d-flex justify-content-between align-items-center mt-auto">
                <div class="btn-group">
                  <%= link_to t('main_page.view_details'), main_product_path(ppr), class: 'btn btn-sm btn-outline-secondary' %>
                </div>
                <button type="button" class="btn btn-outline-secondary btn-sm"><i class="bi bi-cart"></i></button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% if @new_products.any? %>
  <div class="album py-5 bg-body-tertiary">
    <h2 class="mb-8 text-4xl font-extrabold tracking-tight leading-none text-dark md:text-4xl lg:text-4xl text-center"><%= I18n.t('main_page.new_products') %></h2>
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @new_products.each do |np| %>
          <div class="col">
            <div class="card shadow-sm h-100">
              <%= image_tag (np.images.first), class: 'bd-placeholder-img card-img-top img-fluid', style: 'height: 400px; object-fit: cover;' %>
              <div class="card-body">
                <p class="card-text"><%= np.name %></p>
                <p class="card-text"><%= np.description %></p>
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <div class="btn-group">
                    <%= link_to t('main_page.view_details'), main_product_path(np), class: 'btn btn-sm btn-outline-secondary' %>
                  </div>
                  <button type="button" class="btn btn-outline-secondary btn-sm"><i class="bi bi-cart"></i></button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
